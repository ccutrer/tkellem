# Specify your gem's dependencies in tkellem.gemspec
gemspec

group :test do
  gem 'coveralls', require: false
  gem 'mocha', '0.14.0', require: false
  gem 'rake'
  gem 'rspec', '~> 2.13.0'
  gem 'simplecov', require: false
end

group :development do
  gem 'debugger'
  gem 'guard-rspec'
  gem 'rake'
  gem 'rspec-nc'
end
